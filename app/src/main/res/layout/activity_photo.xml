<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="co.herovitamin.librariesbattle.PhotoActivity">

    <EditText
        android:id="@+id/title_to_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Titulo"/>
    <EditText
        android:id="@+id/content_to_send"
        android:layout_below="@+id/title_to_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="contenido"/>
    <Button
        android:id="@+id/shutter"
        android:layout_below="@+id/content_to_send"
        android:text="Foto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="picture_me"/>
    <Button
        android:id="@+id/send_data"
        android:layout_below="@+id/shutter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:onClick="go"/>

</RelativeLayout>
