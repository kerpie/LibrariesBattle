<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <EditText
        android:id="@+id/id_to_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese Id"/>
    <Button
        android:id="@+id/send_button"
        android:layout_below="@+id/id_to_send"
        android:text="Enviar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="check_comment"/>
    <Button
        android:id="@+id/send_photo"
        android:layout_below="@id/send_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enviar datos"
        android:onClick="start_activity"/>

    <TextView
        android:id="@+id/result"
        android:layout_below="@+id/send_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/image_from_server"
        android:layout_below="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
